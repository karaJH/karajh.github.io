/* pages/shops/shops.wxss */
.item {  
    display: flex;  
    background-color: white;  
    flex-direction: row;  
    align-items: flex-start;  
    margin: 20rpx auto;  
    padding: 5rpx;  
    box-sizing: border-box;  
    border: 1px solid #d0d0d0;  
    border-radius: 2px;  
    width: 90%;  
}  
.p{  
    padding-right:10rpx;  
}  
.image{  
    box-sizing: border-box;  
    border: 1px solid #d0d0d0;  
    width: 60px;  
    height: 48px;   
}
.price{  
    line-height: 80px;  
    width: 50%;  
    text-align: center;  
}  