.container {
  position: relative;
}

.project-item,
.add-project-item {
  display: flex;
  padding: 0 12px;
  height: 48px;
  align-items: center;
}

.project-item:active {
  background-color: #a7e1c4;
}

.project-todos-count {
  font-size: 14px;
  color: #666;
}

.add-project-item {
  color: #49a9ee;
}

.add-project-item:active {
  color: #108ee9;
}

.list-item-icon {
  width: 14px;
  height: 14px;
  margin-right: 12px;
}

.float-action-btn {
  position: absolute;
  bottom: 24px;
  left: 50%;
  padding: 15px;
  width: 60px;
  height: 60px;
  border-radius: 100%;
  transform: translateX(-50%);
  background-color: #49a9ee;
  box-shadow: rgba(0, 0, 0, 0.1) 0 1px 2px;
}

.float-action-btn:active {
  background-color: #108ee9;
}

.float-action-btn image {
  width: 100%;
  height: 100%;
}

.project-select,
.todo-form,
.project-form {
  background: #f5f5f5;
}

.form-input {
  padding: 0 12px;
  height: 48px;
  border-bottom: 1rpx solid #ccc;
}

.todo-name {
  margin-top: 12px;
  padding: 0 12px;
  font-size: 28px;
  height: 1.4em;
}

.todo-name-input-placeholder {
  color: #ccc;
}

.todo-form .bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  border-top: 1rpx solid #ccc;
}

.todo-form .actions {
  color: #999;
  background-color: #eee;
}

.todo-form .project-item {
  height: 30px;
}

.bottom-bar .project-name {
  color: #999;
}